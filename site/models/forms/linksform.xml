<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="administrator/components/com_youtubegallery/models/rules"

>

    <fieldset addfieldpath="administrator/components/com_youtubegallery/models/fields">
        <field
                name="id"
                type="hidden"
        />

        <field
                name="listname"
                type="text"
                label="COM_YOUTUBEGALLERY_FIELD_LISTNAME_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_LISTNAME_DESC"
                size="40"
                class="inputbox validate-greeting"
                validate="listname"
                required="true"
                default=""
        />

        <field
                name="catid"
                type="ygcategory"
                label="COM_YOUTUBEGALLERY_FIELD_CATEGORY_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_CATEGORY_DESC"
                class="inputbox"
                required="false"
                default=""
        />

        <field
                name="videolist"
                type="textarea"
                label="COM_YOUTUBEGALLERY_FIELD_VIDEOLIST_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_VIDEOLIST_DESC"
                class="inputbox"
                default=""
                cols="50"
                rows="28"
        />

        <field
                name="updateperiod"
                type="list"
                label="COM_YOUTUBEGALLERY_FIELD_UPDATEPERIOD_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_UPDATEPERIOD_DESC"
                class="inputbox"
                cols="150"
                default="7"
        >

            <option value="0.041">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_0041</option>
            <option value="0.125">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_0125</option>
            <option value="0.25">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_025</option>
            <option value="0.33">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_033</option>
            <option value="0.5">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_05</option>
            <option value="1">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_1</option>
            <option value="3">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_3</option>
            <option value="7">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_7</option>
            <option value="10">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_10</option>
            <option value="30">OM_YOUTUBEGALLERY_VIDEOLIST_CHECK_30</option>
            <option value="365">COM_YOUTUBEGALLERY_VIDEOLIST_CHECK_365</option>

            <option value="-0.041">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_0041</option>
            <option value="-0.125">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_0125</option>
            <option value="-0.25">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_025</option>
            <option value="-0.33">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_033</option>
            <option value="-0.5">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_05</option>
            <option value="-1">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_1</option>
            <option value="-3">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_3</option>
            <option value="-7">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_7</option>
            <option value="-10">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_10</option>
            <option value="-30">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_30</option>
            <option value="-365">COM_YOUTUBEGALLERY_VIDEOLIST_REFRESH_365</option>

        </field>

        <field
                name="description"
                type="textarea"
                label="COM_YOUTUBEGALLERY_FIELD_DESCRIPTION_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_DESCRIPTION_DESC"
                class="inputbox"
                default=""
                cols="150"
                rows="7"
        />

        <field
                cols="150"
                name="author"
                type="text"
                label="COM_YOUTUBEGALLERY_FIELD_AUTHOR_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_AUTHOR_DESC"
                size="40"
                class="inputbox"
                default=""
        />

        <field
                cols="150"
                name="authorurl"
                type="text"
                label="COM_YOUTUBEGALLERY_FIELD_AUTHORURL_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_AUTHORURL_DESC"
                size="40"
                class="inputbox"
                default=""
        />

        <field
                cols="150"
                name="image"
                type="text"
                label="COM_YOUTUBEGALLERY_FIELD_IMAGE_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_IMAGE_DESC"
                size="40"
                class="inputbox"
                default=""
        />

        <field
                cols="150"
                name="note"
                type="text"
                label="COM_YOUTUBEGALLERY_FIELD_NOTE_LABEL"
                description="COM_YOUTUBEGALLERY_FIELD_NOTE_DESC"
                size="40"
                class="inputbox"
                default=""
        />

        <field name="watchusergroup" type="usergroup" default="" label="COM_YOUTUBEGALLERY_FIELD_USERGROUP_LABEL"
               description="COM_YOUTUBEGALLERY_FIELD_USERGROUP_DESC"/>

    </fieldset>

</form>
