<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">
	<name>COM_YOUTUBEGALLERY</name>
	<creationDate>August 2025</creationDate>
	<author>JoomlaBoat.com</author>
	<authorEmail>support@joomlaboat.com</authorEmail>
	<authorUrl>https://joomlaboat.com</authorUrl>
	<copyright>Copyright (C) Ivan Komlev. All rights reserved.</copyright>
	<license>GNU General Public License</license>
	<version>5.6.9</version>
	<description><![CDATA[
		<h1>YouTube Gallery</h1>
		<div style="clear: both;"></div>
		<p>YouTube Gallery is a video media management solution for Joomla! The component that shows a video gallery - catalog of selected videos, Play Lists, Channels etc.</p>
		<p>Created by <a href="https://joomlaboat.com" target="_blank">Ivan Komlev</a><br /><small>Development started in 2010. Last update: August 2025.</small></p>
	]]></description>

	<scriptfile>script.php</scriptfile>

	<files folder="site">
		<filename>index.html</filename>
		<filename>youtubegallery.php</filename>
		<filename>controller.php</filename>
		<filename>router.php</filename>

		<folder>controllers</folder>
		<folder>importfiles</folder>
		<folder>libraries</folder>
		<folder>css</folder>
		<folder>js</folder>
		<folder>images</folder>
		<folder>language</folder>
		<folder>models</folder>
		<folder>views</folder>

	</files>

	<languages folder="site">
		<language tag="en-GB">language/en-GB/en-GB.com_youtubegallery.ini</language>
		<language tag="es-ES">language/es-ES/es-ES.com_youtubegallery.ini</language>
	</languages>

	<administration>
		<!-- Administration Menu Section -->
		<menu>COM_YOUTUBEGALLERY_MENU</menu>

		<submenu>
			<menu link="option=com_youtubegallery&amp;view=linkslist" view="linkslist" img=""
				  alt="COM_YOUTUBEGALLERY_MENU_VIDEOLISTS">COM_YOUTUBEGALLERY_MENU_VIDEOLISTS
			</menu>
			<menu link="option=com_youtubegallery&amp;view=themelist" view="themelist" img=""
				  alt="COM_YOUTUBEGALLERY_MENU_THEMES">COM_YOUTUBEGALLERY_MENU_THEMES
			</menu>
			<menu link="option=com_youtubegallery&amp;view=categories" view="categories" img=""
				  alt="COM_YOUTUBEGALLERY_MENU_CATEGORIES">
				COM_YOUTUBEGALLERY_MENU_CATEGORIES
			</menu>
			<menu link="option=com_youtubegallery&amp;view=settings&amp;layout=edit" view="settings" img=""
				  alt="COM_YOUTUBEGALLERY_MENU_SETTINGS">COM_YOUTUBEGALLERY_MENU_SETTINGS
			</menu>
		</submenu>

		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>controller.php</filename>
			<filename>youtubegallery.php</filename>
			<filename>access.xml</filename>
			<filename>config.xml</filename>

			<folder>controllers</folder>
			<folder>css</folder>
			<folder>forms</folder>
			<folder>js</folder>
			<folder>helpers</folder>
			<folder>libraries</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
			<folder>xml</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_youtubegallery.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_youtubegallery.sys.ini</language>

			<language tag="es-ES">language/es-ES/es-ES.com_youtubegallery.ini</language>
			<language tag="es-ES">language/es-ES/es-ES.com_youtubegallery.sys.ini</language>
		</languages>
	</administration>

</extension>
